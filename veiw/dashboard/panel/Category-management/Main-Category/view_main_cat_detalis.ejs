<%- include('../../../components/header.ejs') %>
  <%- include('../../../components/sidebar.ejs') %>

    <div class="d-sm-flex text-center justify-content-between align-items-center mb-4">
      <h3 class="mb-sm-0 mb-1 fs-18">Category Management</h3>
      <ul class="ps-0 mb-0 list-unstyled d-flex justify-content-center">
        <li>
          <a href="/maincategorylist" class="text-decoration-none">
            <i class="ri-home-2-line" style="position: relative; top: -1px;"></i>
            <span>Home</span>
          </a>
        </li>
        <li>
          <span class="fw-semibold fs-14 heading-font text-dark dot ms-2">View Main Category</span>
        </li>
      </ul>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="card bg-white border-0 rounded-10 mb-4">
          <div class="card-body p-4">
            <h4 class="fs-18 mb-4">View Main Category</h4>
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="preview-tab-pane" role="tabpanel" aria-labelledby="preview-tab"
                tabindex="0">
                <%if(data){%>
                  <% data.forEach((abc, i)=> { %>
                    <form method="post" action="/maincategorylist/updatedetails" enctype="multipart/form-data">
                      <input type="hidden" value="<%= abc.cat_main_token %>" name="cat_main_token">
                      <div class="row">
                        <div class="col-lg-6">
                          <div class="form-group mb-4">
                            <label class="label">Category Name</label>
                            <div class="form-group position-relative">
                              <input type="text" class="form-control text-dark ps-5 h-58" name="cat_name"
                                placeholder="Enter Name" value="<%= abc.cat_name %>">
                              <i
                                class="fas fa-tags position-absolute top-50 start-0 translate-middle-y fs-20 text-gray-light ps-20"></i>
                            </div>
                          </div>
                        </div>
                        <div class="col-lg-6">
                          <div class="form-group mb-4">
                            <label class="label">Category Icon</label>
                            <div class="form-group position-relative">
                              <input type="text" name="icon" class="form-control text-dark ps-5 h-58"
                                placeholder="fa fa-icon" value="<%= abc.icon %>">
                              <i
                                class="fas fa-th-large position-absolute top-50 start-0 translate-middle-y fs-20 text-gray-light ps-20"></i>
                            </div>
                          </div>
                        </div>
                        <div class="col-lg-12">
                          <div class="form-group">
                            <label class="label">Category Image</label>
                            <input class="form-control" type="file" name="image" value="<%= abc.image %>">
                            <img
                              src="/Storage/category-management/main-category/<%= abc.cat_main_token %>/<%= abc.image%>"
                              alt="" width="50px" style="margin-top: 10px;">
                          </div>
                        </div>

                      </div>
                      <div class="col-lg-12">
                        <div class="form-group my-4">
                          <label class="label">Description</label>
                          <div class="form-group position-relative">
                            <textarea class="form-control ps-5 text-dark" placeholder="Some demo text ... " cols="30"
                              rows="5" name="cat"><%= abc.cat_des %></textarea>
                            <i
                              class="ri-information-line position-absolute top-0 start-0 fs-20 text-gray-light ps-20 pt-2"></i>
                          </div>
                        </div>
                      </div>
                      <div class="col-lg-12 ">
                        <button type="submit"
                          class="btn btn-success bg-success bg-opacity-10 text-primary border-0 fw-semibold py-2 px-4">Update</button>
                      </div>
                    </form>
                    <% }); }%>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- include('../../../components/footer.ejs') %>